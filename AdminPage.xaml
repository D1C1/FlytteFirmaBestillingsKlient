<Page
    x:Class="FlytteFirmaBestillingsKlient.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlytteFirmaBestillingsKlient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListView ItemsSource="{x:Bind ViewModelAdmin.OC_Bookings }" Margin="0,0,960,0">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Booking">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Text="{x:Bind BookingId, Mode=TwoWay}"/>
                        <TextBox Text="{x:Bind BookingBruger.Navn, Mode=TwoWay}"/>
                        <TextBox Text="{x:Bind FlytteDato, Mode=TwoWay}"/>
                        <TextBox Text="{x:Bind Detaljer, Mode=OneWay}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Command="{x:Bind ViewModelAdmin.HentDataButton, Mode=OneWay}" Content="Hent Data" Margin="925,500,0,0" VerticalAlignment="Top" Height="92" Width="237"/>

        <HyperlinkButton Content="Click to go to MainPage"
                 Click="HyperlinkButton_Click" Margin="1342,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
